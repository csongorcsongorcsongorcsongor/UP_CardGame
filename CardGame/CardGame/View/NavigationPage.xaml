<Page x:Class="CardGame.View.NavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <local:EntityDisplay Grid.Row="0" Grid.Column="2" DataContext="{Binding Player}"/>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="{Binding Name1}"/>
            <Label Content="{Binding Description1}"/>
            <Button Content="Choose" Command="{Binding ChooseCommand}" CommandParameter="1" IsEnabled="{Binding HasNotChosen}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="3">
            <Label Content="{Binding Name2}"/>
            <Label Content="{Binding Description2}"/>
            <Button Content="Choose" Command="{Binding ChooseCommand}" CommandParameter="2" IsEnabled="{Binding HasNotChosen}"/>
        </StackPanel>

        <Button Content="Next Battle" Grid.Row="2" Grid.Column="2" Command="{Binding ExitNavigationCommand}"/>
    </Grid>
</Page>