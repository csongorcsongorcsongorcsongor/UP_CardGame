<Page x:Class="CardGame.View.CombatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CombatPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding Player}">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <local:EntityDisplay />
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>


        <ContentControl Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Content="{Binding Enemy}">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <local:EntityDisplay />
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>





        <Button Grid.Row="2" Grid.Column="5" Command="{Binding NextRoundCommand}" HorizontalAlignment="Center" VerticalAlignment="Center">Next Round</Button>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <Button Content="Use" Command="{Binding UseCardCommand}" CommandParameter="0" IsEnabled="{Binding Enabled1}" Margin="5"/>
            <ContentControl Content="{Binding Card1}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <local:CardDisplay></local:CardDisplay>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2">
            <Button Content="Use" Command="{Binding UseCardCommand}" CommandParameter="1" IsEnabled="{Binding Enabled2}" Margin="5"/>

            <ContentControl Content="{Binding Card2}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <local:CardDisplay></local:CardDisplay>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="3">
            <Button Content="Use" Command="{Binding UseCardCommand}" CommandParameter="2" IsEnabled="{Binding Enabled3}" Margin="5"/>
            <ContentControl Content="{Binding Card3}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <local:CardDisplay></local:CardDisplay>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </StackPanel>
    </Grid>
</Page>
