<Page x:Class="CardGame.View.CombatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CombatPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1">
            <ContentControl Content="{Binding Card1}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <local:CardDisplay></local:CardDisplay>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <ContentControl Content="{Binding Card2}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <local:CardDisplay></local:CardDisplay>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <ContentControl Content="{Binding Card3}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <local:CardDisplay></local:CardDisplay>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </StackPanel>
        <Button Grid.Row="1" Grid.Column="3" Content=" Next Round" Command="{Binding NextRoundCommand}"></Button>
    </Grid>
</Page>
